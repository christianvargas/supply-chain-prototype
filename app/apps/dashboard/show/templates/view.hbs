<div class="main-color topbar-secondary">
  <div class="container padding-top-double padding-bottom-double">
    <h2>Dashboard</h2>
  </div>
</div>

<div class="container has-secondary-topbar padding-top-double padding-bottom-double">

  <div class="row">
    <div class="col-sm-6">
      <h2>My RRR History</h2>
      <div id="mytrend" style="width: 100%; height: 400px;"></div>
    </div>

    <div class="col-sm-4 hidden">
      <h2>My Current RRR</h2>
      <span class="big-number thin">{{ data.company.rrr }}</span>
      &nbsp;
      <span class=""><i class="ti-arrow-down text-green1"></i> 21%</span>

      <div id="esg" style="width: 100%; height: 180px;"></div>
    </div>

    <div class="col-sm-6">
      <h2>My Threads</h2>
      <table class="table" style="margin-bottom:0px;">
        <thead>
          <tr>
            <th width="70%">Thread</th>
            <th width="30%" class="text-center">Date</th>
          </tr>
        </thead>
        <tbody>
          {{#each data.myNews}}
          <tr>
            <td>
              {{ h }}
              <div class="small text-darkgray">{{ s }}</div>
            </td>
            <td class="text-center">{{ d }}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="text-right">
        <p class="small"><a href="#">View All</a></p>
      </div>
    </div>
  </div>

  <hr />

  <div class="row">
    <div class="col-sm-6">
      <h2 class="pull-left">Technology Partners</h2>
      <div class="pull-right">
        <div class="btn-group">
          <div class="btn-group" role="group">
            <button class="btn btn-transparent" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="ti-layout text-darkgray"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-right">
              <li><a href="#"><i class="ti-layout-column4"></i>&nbsp; Quarter Width</a></li>
              <li><a href="#"><i class="ti-layout-column3"></i>&nbsp; Third Width</a></li>
              <li><a href="#"><i class="ti-layout-column2"></i>&nbsp; Half Width</a></li>
              <li><a href="#"><i class="ti-layout-width-full"></i>&nbsp; Full Width</a></li>
            </ul>
          </div>
          <div class="btn-group" role="group">
            <button class="btn btn-transparent" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="ti-settings text-darkgray"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-right">
              <li><a href="#"><i class="ti-bar-chart"></i>&nbsp; Current RRR</a></li>
              <li><a href="#"><i class="ti-stats-up"></i>&nbsp; Average Daily RRR</a></li>
              <li><a href="#"><i class="ti-stats-up"></i>&nbsp; Average Monthly RRR</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#"><i class="ti-list"></i>&nbsp; Latest Threads</a></li>
              <li><a href="#"><i class="ti-list"></i>&nbsp; High Impact Threads</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#"><i class="ti-world"></i>&nbsp; Heatmap (Last 7 days)</a></li>
              <li><a href="#"><i class="ti-world"></i>&nbsp; Heatmap (Last 30 days)</a></li>
              <li><a href="#"><i class="ti-world"></i>&nbsp; Heatmap (All)</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
      <table class="table" style="margin-bottom:0px;">
        <thead>
          <tr>
            <th width="20%">Company</th>
            <th width="50%">Thread</th>
            <th width="30%" class="text-center">Date</th>
          </tr>
        </thead>
        <tbody>
          {{#each data.myNews}}
          <tr>
            <td>{{ co }}</td>
            <td>
              <a href="/#/thread/1">{{ h }}</a>
              <div class="small text-darkgray">{{ s }}</div>
            </td>
            <td class="text-center">{{ d }}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="text-right">
        <p class="small"><a href="#">View All</a></p>
      </div>
    </div>
    <div class="col-sm-6">
      <h2 class="pull-left">Key Competitors</h2>
      <div class="pull-right">
        <div class="btn-group">
          <div class="btn-group" role="group">
            <button class="btn btn-transparent" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="ti-layout text-darkgray"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-right">
              <li><a href="#"><i class="ti-layout-column4"></i>&nbsp; Quarter Width</a></li>
              <li><a href="#"><i class="ti-layout-column3"></i>&nbsp; Third Width</a></li>
              <li><a href="#"><i class="ti-layout-column2"></i>&nbsp; Half Width</a></li>
              <li><a href="#"><i class="ti-layout-width-full"></i>&nbsp; Full Width</a></li>
            </ul>
          </div>
          <div class="btn-group" role="group">
            <button class="btn btn-transparent" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="ti-settings text-darkgray"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-right">
              <li><a href="#" class="show-rrr-chart"><strong><i class="ti-bar-chart"></i>&nbsp; Current RRR</strong></a></li>
              <li><a href="#" class="show-daily"><strong><i class="ti-stats-up"></i>&nbsp; Average Daily RRR</strong></a></li>
              <li><a href="#"><i class="ti-stats-up"></i>&nbsp; Average Monthly RRR</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#" class="show-threads"><strong><i class="ti-list"></i>&nbsp; Latest Threads</strong></a></li>
              <li><a href="#"><i class="ti-list"></i>&nbsp; High Impact Threads</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#"><i class="ti-world"></i>&nbsp; Heatmap (Last 7 days)</a></li>
              <li><a href="#"><i class="ti-world"></i>&nbsp; Heatmap (Last 30 days)</a></li>
              <li><a href="#"><i class="ti-world"></i>&nbsp; Heatmap (All)</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
      <div id="rrrChart">
        <div id="competitors" style="width:100%; height: 320px;"></div>
      </div>
      <div id="rrrDaily" style="display:none;">
        <div id="compDaily" style="width:100%; height: 520px;"></div>
      </div>
      <div id="rrrThreads" style="display:none;">
        <table class="table" style="margin-bottom:0px;">
          <thead>
            <tr>
              <th width="20%">Company</th>
              <th width="50%">Thread</th>
              <th width="30%" class="text-center">Date</th>
            </tr>
          </thead>
          <tbody>
            {{#each data.myNews}}
            <tr>
              <td>Lyft</td>
              <td>
                <a href="/#/thread/1">{{ h }}</a>
                <div class="small text-darkgray">{{ s }}</div>
              </td>
              <td class="text-center">{{ d }}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        <div class="text-right">
          <p class="small"><a href="#">View All</a></p>
        </div>
      </div>
    </div>

  </div>

</div>
